#!/usr/bin/env bash
# This script transfers a file from a client to a server using scp.

if [ $# -ne 3 ]; then
    echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

FILE_PATH=$1
SERVER_IP=$2
SSH_USER=$3
SSH_KEY=$4

# Check if the file exists
if [ ! -f "$FILE_PATH" ]; then
    echo "Error: File '$FILE_PATH' not found!"
    exit 1
fi

# Transfer the file using scp
scp -o StrictHostKeyChecking=no -i "$SSH_KEY" "$FILE_PATH" "$SSH_USER@$SERVER_IP":~

# Check if scp command was successful
if [ $? -eq 0 ]; then
    echo "File '$FILE_PATH' successfully transferred to $SSH_USER@$SERVER_IP:~/"
else
    echo "Error: Failed to transfer file '$FILE_PATH' to $SSH_USER@$SERVER_IP"
fi
